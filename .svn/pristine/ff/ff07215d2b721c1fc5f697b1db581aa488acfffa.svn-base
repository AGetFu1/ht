                </td>
            </tr>
            @*<tr>
                    <th class="formTitle">结束时间</th>
                    <td class="formValue">
                        <input id="F_End" name="F_End" type="text" class="form-control required" placeholder="结束时间" />
                    </td>
                </tr>*@
        </table>
    </div>
</form>
