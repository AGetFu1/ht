                        <option value="设备联网组">设备联网组</option>
                        <option value="网络维护组">网络维护组</option>
                        <option value="服务器组">服务器组</option>
                    </select>
                    @*<select id="F_Team" name="F_Team" class="form-control required">
                        </select>*@
                </td>
            </tr>
            <tr>
                <th class="formTitle">姓名</th>
